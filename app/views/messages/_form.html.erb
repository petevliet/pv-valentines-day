

<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-group">
      <%= f.label :title, class: "col-md-1" %>
      <%= f.text_field :title, class: "col-md-3" %>
  </div>

  <div class="form-group">
    <%= f.label :author, class: "col-md-1" %>
    <%= f.text_field :author, class: "col-md-3" %>
  </div>

  <div class="form-group">
    <%= f.label :message, class: "col-md-1" %>
    <%= f.text_field :message, class: "col-md-3 message_text" %>
  </div>

<br />
<br />

  <div class="form-group">
    <div class="col-md-offset-1">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'cancel', messages_path, class: "btn btn-default" %>
    </div>
  </div>

</form>


<% end %>
